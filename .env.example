# VECTIS Energy Calculator - Environment Variables
# Copy this file to .env and update with your actual values

# Application Environment
NODE_ENV=production

# Database Configuration
# Format: mysql://username:password@host:port/database_name
# Example: mysql://vectis_user:your_password@localhost:3306/cpanel_username_vectis
DATABASE_URL=mysql://your_db_user:your_db_password@localhost:3306/your_database_name

# Server Configuration
PORT=3000

# Optional Database Connection Settings (if not using DATABASE_URL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_database_name

# Security Settings (for future use)
SESSION_SECRET=your_session_secret_here