{
  "version": 2,
  "buildCommand": "npm run build && mkdir -p server/public && cp -r dist/public/* server/public/",
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node@3.0.21",
      "config": {
        "runtime": "nodejs20.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server/index.ts"
    }
  ],
  "functions": {
    "server/index.ts": {
      "runtime": "nodejs20.x"
    }
  }
}
